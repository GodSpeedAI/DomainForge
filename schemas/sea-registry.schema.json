{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "SEA Registry Schema",
    "type": "object",
    "required": [
        "version",
        "namespaces"
    ],
    "properties": {
        "version": {
            "type": "integer",
            "enum": [
                1
            ]
        },
        "default_namespace": {
            "type": "string"
        },
        "namespaces": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "namespace",
                    "patterns"
                ],
                "properties": {
                    "namespace": {
                        "type": "string"
                    },
                    "patterns": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "additionalProperties": false
            }
        }
    },
    "additionalProperties": false
}
